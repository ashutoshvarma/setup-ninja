{
  "name": "setup-ninja",
  "version": "0.0.2",
  "private": true,
  "description": "Github action to setup ninja build tool",
  "main": "lib/main.js",
  "scripts": {
    "build": "tsc",
    "format": "prettier --write **/*.ts",
    "format-check": "prettier --check **/*.ts",
    "lint": "eslint src/**/*.ts",
    "pack": "ncc build ./lib/main.js --source-map --minify",
    "test": "jest",
    "dry": "node --experimental-modules bootstrap.mjs",
    "all": "npm run build && npm run format && npm run lint && npm run pack && npm test"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ashutoshvarma/setup-ninja.git"
  },
  "keywords": [
    "actions",
    "node",
    "setup",
    "ninja"
  ],
  "author": "Ashutosh Varma",
  "license": "MIT",
  "dependencies": {
    "@actions/core": "^1.3.0",
    "@actions/io": "^1.1.0",
    "jszip": "^3.7.0",
    "request": "^2.88.2"
  },
  "devDependencies": {
    "@types/jest": "^26.0.23",
    "@types/node": "^15.6.1",
    "@types/request": "^2.48.5",
    "@typescript-eslint/parser": "^2.34.0",
    "@vercel/ncc": "^0.28.6",
    "eslint": "^5.16.0",
    "eslint-plugin-github": "^2.0.0",
    "eslint-plugin-jest": "^22.21.0",
    "jest": "^27.0.1",
    "jest-circus": "^27.0.1",
    "js-yaml": "^4.1.0",
    "prettier": "^2.3.0",
    "ts-jest": "^27.0.0",
    "typescript": "^4.2.4",
    "yaml": "^1.10.2"
  }
}
